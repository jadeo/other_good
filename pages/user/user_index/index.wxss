page {
    background: #eee;
    font-size: 32rpx;
}

.Member_head {
    position: relative;
    padding: 30rpx 40rpx;
    background: #fff;
}

.Member_head:active {
    background: rgba(0, 0, 0, 0.05);
}

.Member_head::before {
    right: 40rpx;
}

.bianji_ico image {
    vertical-align: middle;
}

.bianji_text {
    float: right;
    padding-left: 2px;
}

.Member_head .bianji image {
    width: 16px;
    height: 16px;
}

.Member_menoy {
    position: absolute;
    bottom: 10px;
    left: 50%;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    height: 30px;
    line-height: 30px;
    background: #fff;
    padding: 0 20px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    color: #09bb07;
}

.Member_head .vip {
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -10px 0 0 20px;
}

.vip_ico {
    display: -webkit-box;
    -webkit-box-align: center;
    margin-right: 40rpx;
}

.vip_ico image {
    width: 24px;
    height: 24px;
    color: #fff;
    background: #fff;
    border-radius: 50%;
}

.userinfo-avatar {
    border-radius: 50%;
    width: 100rpx;
    height: 100rpx;
}

.userinfo_name {
    line-height: 100rpx;
}

.member_info view {
    background: #fff;
    margin-top: 10px;
    padding: 15px 10px;
    font-size: 14px;
}

.member_info view text {
    color: #333;
}

.userinfo_paylink span {
    float: right;
    font-size: 16px;
}

.userinfo_bbspost span {
    float: right;
    font-size: 16px;
}

.userinfo_orderlist span {
    float: right;
    font-size: 16px;
}

.userinfo_address span {
    float: right;
    font-size: 16px;
}

/*my.wxss*/

.my-menu-box {
    background: #fff;
    margin: 24rpx 0;
}

.my-menu-item {
    padding: 26rpx 30rpx;
    font-weight: bold;
    color:#505050;
}

.my-menu-item .iconfont {
    font-weight: normal;
    display: inline-block;
    -webkit-transform: scale(1.2);
    transform: scale(1.2);
}

.arrowL {
    display: block;
    padding-left: 30px;
}

.arrowRv::before {
    -webkit-transform: translateY(-50%) scale(0.7) rotate(135deg);
    transform: translateY(-50%) scale(0.7) rotate(135deg);
}

.forum-box {
    overflow: hidden;
}

.my-menu-subitem {
    padding: 12px 20px 12px 10px;
    color: #666;
}

.my-menu-subitem:nth-child(n+2)::before {
    left: 40rpx;
}

.my-menu-subitem:active {
    background: rgba(0, 0, 0, 0.05);
}

.copyright {
    text-align: center;
    line-height: 40px;
    height: 40px;
    margin-bottom: 10px;
}

.copyright-text {
    width: 100%;
    font-size: 12px;
}

.menu-line {
    text-align: center;
}

.menu-line .my-menu-subitem {
    width: 25%;
    padding: 30rpx 0;
    font-size: 12px;
    float: left;
}

.menu-line .my-menu-subitem:active {
    background: rgba(0, 0, 0, 0.05);
}

.menu-line .iconfont {
    font-size: 50rpx;
    line-height: 100%;
}

.links .my-menu-item:active {
    background: rgba(0, 0, 0, 0.05);
}

.loading-icon {
    width: 72px;
    height: 72px;
}

.loading-icon+text {
    display: block;
}
@import '../common.wxss';
